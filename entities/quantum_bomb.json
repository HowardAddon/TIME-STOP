{
  "format_version": "1.17.0",
  "minecraft:entity": {
    "description": {
      "identifier": "ha4:quantum_bomb",
      "is_spawnable": false,
      "is_summonable": true,
      "is_experimental": false,
      "runtime_identifier": "minecraft:snowball"
    },
    "component_groups": {
      "explosion": {
        "minecraft:explode": {
          "fuseLength": 0.3,
          "fuseLit": true,
          "power": 0,
          "causesFire": false,
          "fireAffectedByGriefing": true,
          "destroyAffectedByGriefing": true
        }
      }

    },
    "components": {
      "minecraft:type_family": {
        "family": [
          "inanimate"
        ]
      },
      "minecraft:collision_box": { "width": 0.01, "height": 0.01 },
      "minecraft:projectile": {
        "on_hit": {
          "impact_damage": { "damage": 0, "knockback": false, "catch_fire": false, "semi_random_diff_damage": true },
          "stick_in_ground": { "shake_time": 0.35 },
          "definition_event": {
            "affect_projectile": true,
            "event_trigger": {
              "event": "time_stop",
              "target": "self"
            }
          }
        },
        "power": 2,
        "gravity": 0.1,
        "inertia": 1,
        "liquid_inertia": 1,
        "uncertainty_base": 1,
        "uncertainty_multiplier": 1,
        "anchor": 2,
        "offset": [ 0, 0.5, 0 ],
        "reflect_on_hurt": false
      },
      "minecraft:physics": { "has_gravity": false, "has_collision": true },
      "minecraft:knockback_resistance": { "value": 1 },
      "minecraft:pushable": { "is_pushable": false, "is_pushable_by_piston": false },
      "minecraft:timer": {
        "looping": true,
        "time": 1.6,
        "time_down_event": { "event": "time_stop" }
      }

    },
    "events": {
      "time_stop": {
        "queue_command": {
          "command": [
            "gamerule sendcommandfeedback false",
            "gamerule commandblockoutput false",
            "tag @s add time_stop",
            "tp @s ~~~",
            "summon ha4:quantum_bomb_2 ~~~ ~~",
            "kill @s"
          ],
          "target": "self"
        },
        "add": {
          "component_groups": [
            "explosion"
          ]
        }
      }


    }
  }
}