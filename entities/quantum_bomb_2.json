        "fuseLit": true,
        "power": 3,
        "causesFire": false,
        "fireAffectedByGriefing": true,
        "destroyAffectedByGriefing": true
      },
      "minecraft:boss": {
        "should_darken_sky": true,
        "hud_range": 1
      },
      "minecraft:type_family": {
        "family": [
          "inanimate"
        ]
      },
      "minecraft:scale": {
        "value": 0.1
      },
      "minecraft:collision_box": {
        "width": 0.001,
        "height": 0.001
      },
      "minecraft:health": {
        "value": 9999,
        "max": 9999
      },
      "minecraft:hurt_on_condition": {
        "damage_conditions": [
          {
            "filters": {
              "test": "in_lava",
              "subject": "self",
              "operator": "==",
              "value": true
            },
            "cause": "lava",
            "damage_per_tick": 4
          }
        ]
      },
      "minecraft:knockback_resistance": {
        "value": 1
      },
      "minecraft:nameable": {},
      "minecraft:persistent": {},
      "minecraft:physics": {
