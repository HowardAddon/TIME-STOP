{
  "format_version": "1.17.0",
  "minecraft:entity": {
    "description": {
      "identifier": "ha4:quantum_bomb_2",
      "is_spawnable": false,
      "is_summonable": true,
      "is_experimental": false,
      "scripts": {
        "animate": [
