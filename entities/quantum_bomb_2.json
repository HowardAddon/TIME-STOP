            "weight": 99,
            "remove": {
              "component_groups": [
                "explode"
              ]
            },
            "add": {
              "component_groups": [
                "time"
              ]
            }
          },
          {
            "weight": 1,
            "remove": {
              "component_groups": [
                "time"
              ]
            },
            "add": {
              "component_groups": [
                "explode"
              ]
            }
          }

        ]
      },
      "explode": {
        "remove": {
          "component_groups": [
            "time"
          ]
        },
        "add": {
          "component_groups": [
            "explode"
          ]
        }
      }
    },
    "component_groups": {
      "time": {
        "minecraft:behavior.knockback_roar": {
          "priority": 0,
          "duration": 0.1,
          "attack_time": 1,
          "knockback_damage": 1,
          "knockback_strength": 1,
          "knockback_range": 4,
          "on_roar_end": {
            "event": "time"
          },
          "cooldown_time": 0
        }
      },
      "explode": {
        "minecraft:variant": { "value": 2 },
        "minecraft:explode": {
          "fuseLength": 0.3,
          "fuseLit": true,
          "power": 3,
          "causesFire": false,
          "fireAffectedByGriefing": true,
          "destroyAffectedByGriefing": true
        }
      }
    },

    "components": {
      "minecraft:explode": {
